<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EDF1FC"
    android:orientation="vertical">

    <include layout="@layout/layout_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_225"
            android:scaleType="fitXY"
            android:src="@mipmap/banner3" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_200"
            android:text="消息列表"
            android:textColor="#8BABF7"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_86"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_8">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_13"
                    app:cardElevation="@dimen/dp_2"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/ll_sjsb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_33"
                            android:layout_height="@dimen/dp_33"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_8"
                            android:src="@mipmap/sjsb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text="事件上报"
                            android:textColor="#312D37"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_13"
                    app:cardElevation="@dimen/dp_2"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/ll_sjgz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_33"
                            android:layout_height="@dimen/dp_33"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_8"
                            android:src="@mipmap/sjgz" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text="事件跟踪"
                            android:textColor="#312D37"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_86"
                android:layout_marginTop="@dimen/dp_6"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_8">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_13"
                    app:cardElevation="@dimen/dp_2"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/ll_dzdt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_33"
                            android:layout_height="@dimen/dp_33"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_8"
                            android:src="@mipmap/dzdt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text="电子地图"
                            android:textColor="#312D37"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_13"
                    app:cardElevation="@dimen/dp_2"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/ll_zxbz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_33"
                            android:layout_height="@dimen/dp_33"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_8"
                            android:src="@mipmap/zxbz" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text="咨询帮助"
                            android:textColor="#312D37"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_86"
                android:layout_marginTop="@dimen/dp_6"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_8">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_gdcl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_13"
                    app:cardElevation="@dimen/dp_2"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/ll_gdcl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_33"
                            android:layout_height="@dimen/dp_33"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_8"
                            android:src="@mipmap/gdcl" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text="工单处理"
                            android:textColor="#312D37"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/dp_13"
                    app:cardElevation="@dimen/dp_2"
                    android:visibility="invisible"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/ll_jqqd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_33"
                            android:layout_height="@dimen/dp_33"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_8"
                            android:src="@mipmap/jqqd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text="敬请期待"
                            android:textColor="#C8C8C8"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>